{
  "name": "saga-mcp-server",
  "version": "0.0.1",
  "description": "saga-mcp-server MCP server",
  "type": "module",
  "bin": {
    "saga-mcp-server": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && mcp-build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js stdio",
    "start:sse": "node dist/index.js sse",
    "start:http": "node dist/index.js http",
    "dev": "npm run build && npm run start",
    "dev:sse": "npm run build && npm run start:sse",
    "dev:http": "npm run build && npm run start:http"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "mcp-framework": "^0.2.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.24",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.19.0"
  }
}
